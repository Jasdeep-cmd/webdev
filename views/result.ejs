<%- include("./partials/header")  %> 
<link rel="stylesheet" href="/public/css/index0.css">
<div class ="fun">
      <% if(movieData.Response=== 'False'){%>
               <h1>Movie not found ! Try A New Search </h1>
    <%} else{%>
        
        <div class="row">
            <% movieData["Search"].forEach(function(movie) { %>
            <div
              class="card px-2 py-2"
              style="
                width: 20rem;
                margin-bottom: 10px;
                margin-left: 10px;
                margin-right: 10px;
              "
            >
              <img class="card-img-top" src="<%=movie.Poster%>" alt="Image Not Found" />
              <div class="card-body">
                <h5 class="card-title"><%=movie["Title"]%></h5>
                <p class="card-text">Released on <%=movie["Year"]%></p>
                <a href="/result/<%=movie["imdbID"]%>" class="btn btn-primary">Click To Know More</a>
              </div>
            </div>
        <% }) %> 
  <%} %>
  
</div>
<%- include("./partials/footer")  %> 


